@page
@model SemesterProjekt.Pages.RentalPeriods.RentalAddModel
@using SemesterProjekt.Interfaces;
@using SemesterProjekt.Model;
@inject IEventRepository eventrepo;
@inject IBoatRepository boatrepo;
@{
    ViewData["title"] = "add rentalperiod";
}

@*Anders*@

<h1> create a rentalperiod</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Period.RentalperiodFrom" class="control-label"></label>
                <input asp-for="@Model.Period.RentalperiodFrom" class="control-label" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Period.RentalperiodTo" class="control-label"></label>
                <input asp-for="@Model.Period.RentalperiodTo" class="control-label" />
            </div>
            <div class="form-group">
                <select asp-for="@Model.Period.Boatid" class="form-control" asp-items="@Model.Boatnames">
                    <option value="">-- Select Boat---</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="create Rentalperiod"
            </div>
        </form>
    </div>
</div>