@page
@model SemesterProjekt.Pages.Eventmodel.EventIndexModel
@using SemesterProjekt.Model
@{
    ViewData["title"] = "eventindex";
}
@*Anders*@

<h1>liste over events</h1>

<a asp-page="AddEvent" class="btn btn-primary"> create a new Event</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Start time</th>
            <th>End time</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Events)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.FromDate</td>
                <td>@item.ToDate</td>
                <td> <a asp-page="ClubmemberToEvent" asp-route-id="@item.Id" class="btn btn-primary">Clubmembers to event </a> </td>
                <td> <a asp-page="BoatToEvent" asp-route-id="@item.Id" class="btn btn-primary">boats to event </a> </td>
                <td> <a asp-page="EditEvent" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> </td>
                <td> <a asp-page="DeleteEvent" asp-route-id="@item.Id" class="btn btn-primary">Delete</a> </td>
            </tr>
        }
    </tbody>
</table>
