@page
@model SemesterProjekt.Pages.Eventmodel.EventIndexModel
@using SemesterProjekt.Model
@{
    ViewData["title"] = "eventindex";
}
<h1>liste over events</h1>

<a asp-page="AddEvent"> create a new Event</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Events)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.FromDate</td>
                <td>@item.ToDate</td>
                <td> <a asp-page="EditEvent" asp-route-id="@item.Id">Edit</a> </td>
                <td><a asp-page="DeleteEvent" asp-route-id="@item.Id">Delete</a> </td>
            </tr>
        }
    </tbody>
</table>
